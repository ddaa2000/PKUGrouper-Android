<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.pkugrouper">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pkugrouper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PKUGrouper.Purple"
        android:usesCleartextTraffic="true">
        <activity android:name=".HelpMissionLifecycleActivity"></activity>
        <activity android:name=".HelpCharacterActivity" />
        <activity android:name=".HelpBasicUserActivity" />
        <activity android:name=".EditPasswordActivity" />
        <activity android:name=".EditMeActivity" />
        <activity android:name=".TestThemeActivity" />
        <activity android:name=".MissionAddActivity" />
        <activity android:name=".UserDetailActivity" />
        <activity android:name=".MissionDetailActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>