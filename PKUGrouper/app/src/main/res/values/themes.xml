<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PKUGrouper" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryVariantColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="android:colorBackground">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/textColor</item>
        <item name="colorSurface">@color/backgroundColor</item>

        <item name="radioButtonStyle">@style/Widget.MyApp.RadioButton</item>
        <item name="textInputStyle">@style/Widget.MyApp.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.Card</item>
        <item name="toolbarStyle">@style/Widget.MyApp.AppBar</item>
        <item name="floatingActionButtonStyle">@style/Widget.MyApp.FAB</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Shrine.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Shrine.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Shrine.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Shrine.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Shrine.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Shrine.Headline6</item>

        <item name="textAppearanceBody1">@style/TextAppearance.Shrine.body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Shrine.body2</item>

    </style>

